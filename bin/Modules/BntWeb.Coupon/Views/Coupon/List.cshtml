@using System.Web.Optimization
@using Autofac
@using BntWeb.Environment
@using BntWeb.Security
@using BntWeb.Security.Identity
@using Permissions = BntWeb.Coupon.Permissions
@{
    ViewBag.Title = CouponModule.DisplayName;
    ViewBag.SubTitle = "优惠券";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
}
@section HeaderRight {
  
        <a class="btn btn-sm btn-info publish" href="@Url.Action("Edit", "Coupon", new {area = CouponModule.Area})">
            <i class="icon-plus bigger-110"></i>
            新建
        </a>
  
}
<div class="form-group">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-lg-3 query-form-item">
            <label class="col-sm-4 col-md-4 control-label no-padding-right" for="CouponType">优惠券类型 </label>
            <div class="col-sm-8 col-md-8">
                <div class="clearfix">
                    <select id="CouponType" name="CouponType">
                        <option value="">所有</option>
                        <option value="0">满减</option>
                        <option value="1">立减</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3 query-form-item">
            <label class="col-sm-4 col-md-4 control-label no-padding-right" for="Title"> 标题 </label>
            <div class="col-sm-8 col-md-8">
                <div class="clearfix">
                    <input type="text" id="Title" name="Title" placeholder="标题" value="" />
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3 query-form-item">
            <label class="col-sm-4 col-md-4 control-label no-padding-right" for="Money"> 所减金额 </label>
            <div class="col-sm-8 col-md-8">
                <div class="clearfix">
                    <input type="text" id="Money" name="Money" placeholder="所减金额" value="" />
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-3 query-form-item">
            <label class="col-sm-4 col-md-4 control-label no-padding-right" for="Minimum"> 最低消费 </label>
            <div class="col-sm-8 col-md-8">
                <div class="clearfix">
                    <input type="text" id="Minimum" name="Minimum" placeholder="最低消费" value="" />
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4 col-lg-4 query-form-item">
            <button class="btn btn-sm btn-info" type="submit" id="QueryButton">
                <i class="icon-search bigger-110"></i>
                查询
            </button>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-xs-12">
        <div class="table-responsive">
            <table id="CouponTable" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="col-md-1">标题</th>
                        <th class="col-md-1">描述</th>
                        <th class="col-md-1">金额</th>
                        <th class="col-md-1">期限/月</th>
                        <th class="col-md-1">最低消费</th>
                        <th class="col-md-1">标识</th>
                        <th class="col-md-1">是否启用</th>
                        <th class="col-md-1">优惠券类型</th>
                        <th class="col-md-1">创建时间</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/js/admin/jquery-datatable")
    <script type="text/javascript">
        var url_loadPage = "@Url.Action("ListOnPage", "Coupon", new {area =CouponModule.Area })";
        var url_editCoupon = "@Url.Action("Edit", "Coupon", new {area = CouponModule.Area })";
        var url_deleteCoupon = "@Url.Action("Delete", "Coupon", new {area = CouponModule.Area })";
        var url_switchCoupon = "@Url.Action("Switch", "Coupon", new {area = CouponModule.Area })";
    </script>
    @Scripts.Render("~/js/coupon/list")
}