            <ul class="index-headtoprnav fr">
                @{
                    if (userInfo != null)
                    {
                        var str = userInfo.NickName;
                        if (string.IsNullOrEmpty(str))
                        {
                            str = userInfo.UserName;
                        }
                        <a href="@Url.Action("WebPersonal", "WebMember", new {area = MemberCenterModule.Area})">

                            <li>@str</li>
                        </a>
